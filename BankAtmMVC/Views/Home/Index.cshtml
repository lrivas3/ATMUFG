@model BankAtmMVC.Models.BankUser
@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <p class="display-4">Bienvenido de nuevo @Model.FirstName @Model.LastName</p>
        <h1>Tu Balance: $@Model.Balance</h1>
        <br />
        <div>
            <span class="">
                <a asp-controller="Transaction" asp-action="Deposit"><input type="button" class="btn btn-primary" value="Depositar" /></a>
            </span>
        </div>
        <br />
        <br />
        <div>
            <span class="itemcenter">
                <a asp-controller="Transaction" asp-action="Withdraw"><input type="button" class="btn btn-primary" value="Retirar" /></a>
            </span>
        </div>  
        <br />
        <br />
        <div>
            <span class="itemright">
                <a asp-controller="Transaction" asp-action="PersonalTransactions"><input type="button" class="btn btn-primary" value="Tus Transacciones" /></a>
            </span>
        </div>


</div>
